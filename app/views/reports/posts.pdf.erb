<meta charset="utf-8" />

<%= render 'reports/header' %>
<div class="posts">
  <% @posts.each do |post| %>
    <div class="post">
      <div class="title">
        <%= post.title %>
        <span class="created-at"><%= post.created_at.strftime("%d/%m/%Y") %></span>
      </div>
      <% post.paragraphs.each do |paragraph| %>
        <div class="paragraph"><%= parse_paragraph paragraph %></div>
      <% end %>
    </div>
  <% end %>
</div>

<style type="text/css">
  /*.posts {
