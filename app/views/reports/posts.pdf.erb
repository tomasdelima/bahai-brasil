  }*/

  .post {
    padding: 20px;
    margin-bottom: 40px;
  }

  .title {
    font-size: 30px;
    margin-bottom: 20px;
    position: relative;
    width: 650px;
  }

  .created-at {
    font-size: 13 px;
    color: #555;
    position: absolute;
    top: 0;
    right: -70px;
  }

  .paragraph {
    font-size: 18px;
    line-height: 22px;
    text-align: justify;
  }

  .paragraph img {
    margin: 20px 0;
    width: 100%;
  }

  .italic { font-style: italic; }
  .bold { font-weight: bold; }
  .underline: { text-decoration: underline },
</style>